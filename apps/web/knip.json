{
  "$schema": "https://unpkg.com/knip@latest/schema.json",
  "entry": ["src/pages/**/*.tsx", "src/pages/**/*.ts", "src/app/**/*.tsx", "src/app/**/*.ts"],
  "project": ["src/**/*.{ts,tsx}"],
  "ignore": ["**/*.test.{ts,tsx}", "**/*.stories.{ts,tsx}", "**/__tests__/**", "src/types/contracts/**"],
  "ignoreDependencies": [
    "@storybook/*",
    "storybook",
    "cypress",
    "jest",
    "@testing-library/*",
    "msw",
    "@faker-js/faker"
  ],
  "ignoreExportsUsedInFile": true,
  "rules": {
    "exports": "warn",
    "types": "off",
    "duplicates": "off",
    "unlisted": "off",
    "binaries": "off",
    "dependencies": "off",
    "devDependencies": "off"
  }
}
