{
  "extends": "../../config/tsconfig/confs/base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@safe-global/design-system": ["./src/index.ts"],
      "@safe-global/design-system/web": ["./src/web.ts"],
      "@safe-global/design-system/mobile": ["./src/mobile.ts"],
      "@safe-global/design-system/tokens": ["./src/tokens/index.ts"]
    },
    "jsx": "react-jsx",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "allowImportingTsExtensions": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true
  },
  "include": ["src/**/*", "scripts/**/*", ".storybook/**/*"],
  "exclude": ["node_modules", "dist", "storybook-static"]
}
